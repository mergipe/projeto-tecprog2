<div class="d-flex">
  <div class="mr-auto">
    <h2 class="mb-4">
      <%= t('.title', resource: resource.model_name.human) %>
    </h2>

    <%= bootstrap_form_for(resource, as: resource_name,
      url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: 'w-75' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
      <% end %>

      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password",
          label: 'Nova senha (' + t('.leave_blank_if_you_don_t_want_to_change_it') + ')',
          class: 'w-75' %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
          label: 'Confirme a nova senha', class: 'w-75' %>
      </div>

      <div class="field">
        <%= f.password_field :current_password, autocomplete: "current-password",
          class: 'w-75' %>
      </div>

      <div class="actions mt-4">
        <%= f.submit t('.update'), class: 'btn btn-primary' %>
      </div>

    <% end %>
  </div>

  <div>
    <h2 class="mb-4"><%= t('.cancel_my_account') %></h2>

    <%= link_to t('.cancel_my_account'), delete_user_path(@user), remote: true,
      class: 'btn btn-danger' %>
  </div>
</div>
