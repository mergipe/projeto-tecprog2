<div class="mb-3">
  <h1>Adicionar alimento (<%= @refeicao.nome %>)</h1>
</div>

<div class="d-flex">
  <ul class="nav nav-tabs mr-auto" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="todos-tab" data-toggle="tab"
        href="#todos" role="tab" aria-controls="todos" aria-selected="true">
        Todos
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="meus-tab" data-toggle="tab"
        href="#meus" role="tab" aria-controls="meus" aria-selected="false">
        Meus alimentos
      </a>
    </li>
  </ul>

  <div class="mb-1">
    <%= render partial: 'search_form', locals: {refeicao: @refeicao} %>
  </div>
</div>

<%= render partial: 'tabs' %>

<%= link_to 'Cancelar', user_refeicoes_path(@user, data: @refeicao.data),
  class: 'btn btn-secondary float-right mt-4' %>
