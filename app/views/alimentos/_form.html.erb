<%= bootstrap_form_with(model: [ current_user, @alimento ], local: true,
  inline_errors: true) do |f| %>

  <hr>

  <div class="row mt-4">
    <div class="col">
      <%= f.text_field :nome, placeholder: 'Nome ou descrição do alimento' %>
    </div>
    <div class="col">
      <%= f.text_field :marca, label: 'Marca (opcional)' %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <%= f.text_field :porcao, label: 'Porção de referência' %>
    </div>
    <div class="col-3">
      <%= f.text_field :unidade, label: 'Unidade de medida',
        placeholder: 'g, kg, fatia, pedaço etc.' %>
    </div>
    <div class="col-3">
      <%= f.text_field :porcoes_pacote, label: 'Porções por pacote (opcional)' %>
    </div>
  </div>

  <hr>

  <div class="row mt-4">
    <div class="col-3">
      <%= f.text_field :energia, append: '(kcal)' %>
    </div>
    <div class="col-3">
      <%= f.text_field :carb_disp, label: 'Carboidrato disponível', append: "(g)" %>
    </div>
    <div class="col-3">
      <%= f.text_field :gord_total, label: 'Gordura total', append: "(g)" %>
    </div>
    <div class="col-3">
      <%= f.text_field :gord_poli, label: 'Gordura poliinsaturada', append: "(g)" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <%= f.text_field :proteina, label: 'Proteína', append: "(g)" %>
    </div>
    <div class="col-3">
      <%= f.text_field :fibra, label: 'Fibra alimentar', append: "(g)" %>
    </div>
    <div class="col-3">
      <%= f.text_field :gord_sat, label: 'Gordura saturada', append: "(g)" %>
    </div>
    <div class="col-3">
      <%= f.text_field :gord_trans, label: 'Gordura trans', append: "(g)" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <%= f.text_field :carb_total, label: 'Carboidrato total', append: "(g)" %>
    </div>
    <div class="col-3">
      <%= f.text_field :acucar, label: 'Açúcar', append: "(g)" %>
    </div>
    <div class="col-3">
      <%= f.text_field :gord_mono, label: 'Gordura monoinsaturada', append: "(g)" %>
    </div>
    <div class="col-3">
      <%= f.text_field :colesterol, label: 'Colesterol', append: "(mg)" %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-3">
      <%= f.text_field :sodio, label: 'Sódio', append: "(mg)" %>
    </div>
  </div>

  <hr>

  <div class="float-right mt-3">
    <%= f.submit btn_text, class: 'btn btn-primary' %>

    <% if @alimento.persisted? %>
      <%= button_to 'Remover', [current_user, @alimento], method: :delete,
        data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger ml-3' %>
    <% end %>
  </div>

<% end %>
