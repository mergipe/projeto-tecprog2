<table class="table table-hover table-fixed">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Descrição</th>
      <th scope="col">Porção</th>
      <th scope="col">Energia</th>
      <th scope="col">Proteína</th>
      <th scope="col">Carboidratos</th>
      <th scope="col">Lipídeos</th>
      <th scope="col">Fibras</th>
    </tr>
  </thead>

  <% @meus_alimentos.each do |alimento| %>
    <tr data-href="<%= edit_user_alimento_path(@user, alimento) %>">
      <td><%= alimento.nome_completo %></td>
      <td><%= alimento.porcao_referencia %></td>
      <td><%= alimento.energia %></td>
      <td><%= alimento.proteina %></td>
      <td><%= alimento.carb_total %></td>
      <td><%= alimento.gord_total %></td>
      <td><%= alimento.fibra %></td>
    </tr>
  <% end %>
</table>

<script>
  $("tr[data-href]").click(function() {
      var link = $(this).data('href');
      window.location = link;
  });
</script>
